<body id="hiddenCorridorBody">

  <h1>Illicit Potions</h1>
  <!-- <div class="container"> </div>-->
  <div class="row">
    {{#each potions}}
      <div class="col-sm">
        <div class="card" style="width: 300px">
          <div class="card-body">
            <h5 class="card-title1">{{this.potionName}}</h5>

            {{#if gryffindor}}
            <h6 class="card-subtitle1 mb-2 text-muted"><span class="createdBy">Created by: </span><span class="gryffindorAuthor">{{this.wizard.Wizardname}}</span></h6>
            {{else if ravenclaw}}
            <h6 class="card-subtitle1 mb-2 text-muted"><span class="createdBy">Created by: </span><span class="ravenclawAuthor">{{this.wizard.Wizardname}}</span></h6>
            {{else if hufflepuff}}
            <h6 class="card-subtitle1 mb-2 text-muted"><span class="createdBy">Created by: </span><span class="hufflepuffAuthor">{{this.wizard.Wizardname}}</span></h6>
            {{else if slytherin}}
            <h6 class="card-subtitle1 mb-2 text-muted"><span class="createdBy">Created by: </span><span class="slytherinAuthor">{{this.wizard.Wizardname}}</span></h6>
            {{else}}
            <h6 class="card-subtitle1 mb-2 text-muted"><span class="createdBy">Created by: </span><span class="author">{{this.wizard.Wizardname}}</span></h6>
            {{/if}}

            <!-- listing each of the ingredients here -->
            <ul class="list-elements">
              {{#each this.ingredients}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
            
            <div class="card-footer">
              <a href="#" class="card-link1">Like</a>
              <a href="/potions/{{_id}}" class="card-link1">More Details</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</body>