<body id="signupBody">

<section class="sectionBackground">
  
  <div class="row text-center"><h2 class="largeTitleColor">Registration</h2></div>
  
    <div class="row">
      <div class="col signupForm">
        <form action="/auth/signup" method="POST">
          <label class="smallTitleColor">Wizardname</label>
            <input
              type="text"
              class="form-control"
              name="Wizardname"
              placeholder="Your Wizard name"
              aria-label="Wizardname"
            />
      
      
          <label class="smallTitleColor">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Your Password"
              aria-label="password"
              id="password"
              onkeyup='check();'
            />
      
       
        <label class="smallTitleColor">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          name="confirmPassword"
          placeholder="Confirm your Password"
          aria-label="confirmPassword"
          id="confirmPassword"
          
          onkeyup='check();'
        />
        <span id='message'></span>
        </div>
      
      
        <div class="col signupForm">
          <label class="smallTitleColor">Your Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="Your Name"
            aria-label="name"
          />
      
          <label class="smallTitleColor">First Year Of Hogwarts</label>
          <input
            type="number"
            class="form-control"
            name="firstYearOfHogwarts"
            value="2000"
            aria-label="firstYearOfHogwarts"
          />
          <label class="smallTitleColor">House</label>
          <select name="house" class="form-select" aria-label="house">
            <option selected>Your House</option>
            <option value="gryffindor">Gryffindor</option>
            <option value="hufflepuff">Hufflepuff</option>
            <option value="ravenclaw">Ravenclaw</option>
            <option value="slytherin">Slytherin</option>
          </select>
        </div>
     
  

  <div class="row text-center" id="signupSubmitButtonRow"><button type="submit" id="signupBtn" class="btn customBtnDesgin">Submit</button></div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
    </div>
    
  </section>

</body>